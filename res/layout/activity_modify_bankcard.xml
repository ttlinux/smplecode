<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/toplayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="center"
            android:background="@drawable/circle_loess4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15sp"
            android:textColor="@color/gray19"
            android:text="收款银行    "
            />

        <TextView
            android:id="@+id/bankname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:layout_marginLeft="10dip"
            android:background="@color/white"
            android:textSize="14sp"
            android:padding="5dip"
            android:textColor="@color/gray20"
            android:gravity="right"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="center"
            android:background="@drawable/circle_loess4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15sp"
            android:textColor="@color/gray19"
            android:text="银行卡号    "
            />

        <EditText
            android:id="@+id/banknumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:layout_marginLeft="10dip"
            android:background="@color/white"
            android:textSize="14sp"
            android:padding="5dip"
            android:textColor="@color/black2"
            android:inputType="number"
            android:maxLength="20"
            android:digits="0123456789"
            android:gravity="right"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@color/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="center"
            android:background="@drawable/circle_loess4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15sp"
            android:textColor="@color/gray19"
            android:text="开户地址    "
            />

        <EditText
            android:id="@+id/bankaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:layout_marginLeft="10dip"
            android:background="@color/white"
            android:textSize="14sp"
            android:padding="5dip"
            android:textColor="@color/black2"
            android:inputType="number"
            android:maxLength="20"
            android:digits="0123456789"
            android:gravity="right"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@color/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="center"
            android:background="@drawable/circle_loess4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15sp"
            android:textColor="@color/gray19"
            android:text="资金密码    "
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:layout_marginLeft="10dip"
            android:background="@color/white"
            android:textSize="14sp"
            android:padding="5dip"
            android:textColor="@color/black2"
            android:inputType="textPassword"
            android:maxLength="4"
            android:digits="0123456789"
            android:hint="请输入资金密码"
            android:gravity="right"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip"
        >
        <TextView
            android:id="@+id/unband"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="解绑"
            android:background="@drawable/btn_conner_noradiu_loss"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:padding="10dip"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="修改"
            android:background="@drawable/btn_conner_noradiu_loss"
            android:layout_weight="1"
            />

    </LinearLayout>
</LinearLayout>
