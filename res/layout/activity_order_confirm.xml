<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray18"
    >

    <LinearLayout
        android:id="@+id/bottowview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/gray15"
        >
        <TextView
            android:id="@+id/smartfollow"
            android:layout_weight="0.15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/smartchoose"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textColor="@color/white"
            android:singleLine="true"
            android:background="@color/gray14"
            />
        <TextView
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textColor="@color/white"
            android:background="@color/gray15"
            />
        <TextView
            android:id="@+id/bottomview3"
            android:layout_weight="0.15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/pay"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textColor="@color/white"
            android:singleLine="true"
            android:background="@color/loess4"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/botomview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottowview"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:layout_weight="1"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray20"
                android:text="追"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/follow_times"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_conner_radiu_gray"
                android:hint="1"
                android:padding="3dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:textColorHint="@color/gray20"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray20"
                android:text="期"
                android:textSize="14sp"
                />
        </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray20"
                    android:text="投"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/multiply"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_conner_radiu_gray"
                    android:hint="1"
                    android:editable="false"
                    android:focusable="false"
                    android:padding="3dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:textColorHint="@color/gray20"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray20"
                    android:text="倍"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/botomview2"
        >
        <include
            layout="@layout/toplayout"/>
        <RelativeLayout
            android:id="@+id/timeview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lottrytimelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="期号获取中..."
                    android:textColor="@color/black"
                    android:singleLine="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/loess4"
                    android:singleLine="true"
                    />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dip"
            android:background="#aaD3D3D3"
            />
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/buttons1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray19"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:background="@drawable/btn_conner_radiu_white"
                android:textSize="13sp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/add"
                android:text="@string/countinuechoose"
                />

            <TextView
                android:id="@+id/buttons2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:textColor="@color/gray19"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:background="@drawable/btn_conner_radiu_white"
                android:textSize="13sp"
                android:drawableLeft="@drawable/add"
                android:text="@string/randomchooseone"
                />

            <TextView
                android:id="@+id/buttons3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:textColor="@color/gray19"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:background="@drawable/btn_conner_radiu_white"
                android:textSize="13sp"
                android:drawableLeft="@drawable/add"
                android:text="@string/randomchoosefive"
                />

            <TextView
                android:id="@+id/buttons4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:textColor="@color/gray19"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:background="@drawable/btn_conner_radiu_white"
                android:textSize="13sp"
                android:drawableLeft="@drawable/delete"
                android:text="@string/clearlist"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bootomview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:src="@drawable/top_pic"
                android:scaleType="fitXY"
                />
                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:cacheColorHint="#00000000"
                    android:listSelector="#00000000"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="8dip"
                    >


                </ListView>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
