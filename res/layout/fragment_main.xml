<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray17"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lottery.biying.view.MyViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dip"></com.lottery.biying.view.MyViewPager>

        <RelativeLayout
            android:id="@+id/testlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/viewpager">

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/icon_backindicator" />

        <com.lottery.biying.view.AutoVerticalScrollTextView
            android:id="@+id/textdd"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_toLeftOf="@id/image"
            android:drawablePadding="5dp"
            android:ellipsize="none"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left|center"
            android:padding="3dip"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:textColor="@color/gray2"
            android:textSize="13sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray17" />

    <com.lottery.biying.view.SwipeHeader
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="1px"
            android:numColumns="2"
            android:verticalSpacing="1px">

        </GridView>
    </com.lottery.biying.view.SwipeHeader>

</LinearLayout>
