<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray12"
    >
    <include
        layout="@layout/toplayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="20dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_gravity="center"
                android:background="@drawable/circle_loess4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="新密码        "
                android:textColor="@color/gray19"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="15dip"
                android:background="@color/white"
                android:hint="请输入6-16位英文字母以及数字组合"
                android:padding="5dip"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/black2"
                android:maxLength="16"
                android:digits="0987654321qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="2dip"
            android:background="@color/line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="20dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_gravity="center"
                android:background="@drawable/circle_loess4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="确认新密码"
                android:textColor="@color/gray19"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="15dip"
                android:background="@color/white"
                android:hint="请输入确认新密码"
                android:padding="5dip"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/black2"
                android:maxLength="16"
                android:digits="0987654321qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="2dip"
            android:background="@color/line" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:background="@drawable/btn_conner_noradiu_loss"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="确认"
            android:padding="10dip"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>
