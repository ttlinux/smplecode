<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toplayout">

        </include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:maxHeight="90dp"
                        android:maxWidth="90dp"
                        android:src="@drawable/bbin" />

                    <TextView
                        android:id="@+id/bankname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="10dip"
                        android:layout_toEndOf="@+id/img"
                        android:text="银行名称"
                        android:textColor="@color/gray8"
                        android:textSize="14sp" />

                    <!--<TextView-->
                    <!--android:id="@+id/texthold"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="14sp"-->
                    <!--android:textColor="@color/gray8"-->
                    <!--android:gravity="right"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_alignTop="@+id/bankname"-->
                    <!--android:layout_marginEnd="40dp"-->
                    <!--android:text="开户名" />-->

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignStart="@+id/bankname"
                        android:layout_below="@+id/bankname"
                        android:layout_marginRight="40dip"
                        android:layout_marginTop="5dp"
                        android:background="@color/topbagcolor" />
                    <!--<View-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:background="@color/gray"-->
                    <!--android:layout_alignStart="@+id/textView"-->
                    <!--android:layout_toStartOf="@+id/changebox"-->
                    <!--android:id="@+id/textView3" />-->

                    <TextView
                        android:id="@+id/bankusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/view3"
                        android:layout_alignTop="@+id/view3"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="开户名"
                        android:textColor="@color/gray8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/duplicate_kaihuming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/view3"
                        android:layout_alignTop="@+id/view3"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="复制"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/banknumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/bankusername"
                        android:layout_below="@+id/bankusername"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:text="银行卡号" />

                    <TextView
                        android:id="@+id/duplicate_bankcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/view3"
                        android:layout_below="@+id/bankusername"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:text="复制"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/banknumber"
                        android:layout_below="@+id/banknumber"
                        android:layout_marginTop="5dp"
                        android:text="开户行"
                        android:textColor="@color/gray8"
                        android:textSize="14sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    >

                    <LinearLayout
                        android:id="@+id/accountlayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"

                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/circle_loess4" />

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:button="@null"
                            android:drawableRight="@drawable/circle_loess4"
                            android:text="充值金额："
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/jine"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入充值金额"
                            android:inputType="numberDecimal"
                            android:padding="10dip"
                            android:singleLine="true"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/topbagcolor" />

                    <LinearLayout
                        android:id="@+id/passwlayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/circle_loess4" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:button="@null"
                            android:drawablePadding="5dp"
                            android:text="汇款时间："
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/choosedate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dip"
                            android:layout_weight="1"
                            android:background="@drawable/radiu_gray_selector"
                            android:drawableRight="@drawable/icon_jilu"
                            android:gravity="left|center_vertical"
                            android:hint="请选择汇款时间"
                            android:paddingBottom="5dip"
                            android:paddingLeft="15dip"
                            android:paddingRight="10dip"
                            android:paddingTop="5dip"
                            android:textSize="13sp"

                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/topbagcolor" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/circle_loess4" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:button="@null"
                            android:drawablePadding="5dp"
                            android:text="汇款方式："
                            android:textSize="13sp" />


                        <EditText
                            android:id="@+id/hkfs"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:cursorVisible="false"
                            android:editable="false"
                            android:focusable="false"
                            android:gravity="right|center"
                            android:hint="请选择汇款方式"
                            android:inputType="textAutoComplete"
                            android:padding="10dip"
                            android:singleLine="true"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/topbagcolor" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/circle_loess4" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:button="@null"
                            android:drawablePadding="5dp"
                            android:text="汇款人姓名："
                            android:textSize="13sp" />


                        <EditText
                            android:id="@+id/code"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入汇款人姓名"
                            android:inputType="textAutoComplete"
                            android:padding="10dip"
                            android:singleLine="true"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/topbagcolor" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/topbagcolor" />

                    <LinearLayout
                        android:id="@+id/noticelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/warn" />

                        <RadioButton
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/listview"
                            android:layout_marginLeft="5dip"
                            android:button="@null"
                            android:drawablePadding="5dip"
                            android:gravity="left|center"
                            android:text="@string/tips3"
                            android:textColor="@color/gray8"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/comit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/radius_imageview"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="提交表单"
                        android:textSize="16sp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>
