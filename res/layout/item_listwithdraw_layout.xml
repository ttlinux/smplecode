<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray1"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_height="70dp">
        <ImageView
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/img" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"
            android:layout_toRightOf="@id/img"
            android:layout_marginLeft="5dip"
            />

        <TextView
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/line"
            android:layout_marginLeft="25dp"
            android:textSize="14sp"
            android:textColor="@color/gray20"
            android:id="@+id/bankname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:text=""
             />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changebox"
            style="@null"
            android:button="@null"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/right_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/banknumber"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/text2"
            android:textSize="14sp"
            android:layout_marginTop="-10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changebox"
            android:layout_alignStart="@+id/bankname"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_toLeftOf="@id/changebox"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/text2"
            />


    </RelativeLayout>
</LinearLayout>
