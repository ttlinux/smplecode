<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="vertical"
            android:background="@drawable/btn_conner_radiu_white"
            android:padding="5dip"
            >

            <TextView
                android:id="@+id/timeview1"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray24"
                android:text="03/26"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray24"
                android:layout_margin="2dip"
                />
            <TextView
                android:id="@+id/timeview2"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray24"
                android:text="17:23"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dip"
                >
                <TextView
                    android:id="@+id/lotteryname"
                    android:layout_weight="0.37"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#434343"
                    android:gravity="left"
                    android:text="重启试试车"
                    />

                <TextView
                    android:id="@+id/ganmename"
                    android:layout_weight="0.32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="重启试试车试试"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/qishu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.31"
                    android:layout_marginRight="10dip"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:gravity="right"
                    android:text="10188888888"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/betmoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.37"
                    android:textSize="14sp"
                    android:textColor="#434343"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/winmoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.32"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.31"
                    android:layout_marginRight="10dip"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:gravity="right"
                    />
            </LinearLayout>


        </LinearLayout>
</LinearLayout>
