<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:AutoSizeTextview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/loess4">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/back"
            />

        <TextView
            android:id="@+id/backtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="left|center_vertical"
            android:layout_toRightOf="@id/back"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:drawableRight="@drawable/triangle"
            android:drawablePadding="5dip"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="end"
            android:textSize="15sp"
            android:ems="5"
            />
        <!--   <View
               android:id="@+id/line"
               android:layout_width="1dp"
               android:layout_height="30dp"
               android:layout_margin="5dp"
               android:background="@color/white"
               android:layout_toRightOf="@+id/back"
               android:layout_centerVertical="true"
               ></View>-->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp" />



        <ImageView
            android:id="@+id/assistant_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:src="@drawable/lottery_more"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/assistant_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:src="@drawable/cart"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/assistant_icon"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/timeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/lottrytimelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/requestingqihao"
                android:textColor="@color/black"
                android:singleLine="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/loess4"
                android:singleLine="true"
                />
        </LinearLayout>

    </RelativeLayout>
        <LinearLayout
            android:id="@+id/bottowview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/jixuan"
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/randomchoose"
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:textColor="@color/white"
                android:singleLine="true"
                android:background="@color/gray14"
                />
            <TextView
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="共0注"
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:textColor="@color/white"
                android:singleLine="true"
                android:background="@color/gray15"
                />
            <TextView
                android:id="@+id/confirm"
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/confirm"
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:textColor="@color/white"
                android:singleLine="true"
                android:background="@color/loess4"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottowview"
            android:background="@color/white"
            >

            <RadioGroup
                android:id="@+id/Selectorswitch"
                android:layout_width="wrap_content"
                android:padding="9dip"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rb1"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="高奖"
                    android:background="@drawable/switch_left_draw"
                    android:singleLine="true"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/rb2"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:singleLine="true"
                    android:textSize="13sp"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="高返"
                    android:background="@drawable/switch_right_draw"
                    />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/money_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:text="元"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:button="@null"
                    android:textColor="@color/bet_type_selecter"
                    android:background="@drawable/money_btn_selecter"
                    />
                <RadioButton
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:text="角"
                    android:textSize="13sp"
                    android:layout_marginLeft="7dip"
                    android:button="@null"
                    android:textColor="@color/bet_type_selecter"
                    android:background="@drawable/money_btn_selecter"
                    />
                <RadioButton
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:text="分"
                    android:textSize="13sp"
                    android:layout_marginLeft="7dip"
                    android:button="@null"
                    android:textColor="@color/bet_type_selecter"
                    android:background="@drawable/money_btn_selecter"
                    />

                <RadioButton
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:visibility="gone"
                    android:gravity="center"
                    android:text="厘"
                    android:textSize="13sp"
                    android:layout_marginLeft="7dip"
                    android:button="@null"
                    android:textColor="@color/bet_type_selecter"
                    android:background="@drawable/money_btn_selecter"
                    />

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/multiple"
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="5"
                    android:background="@drawable/btn_conner_radiu_white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:textSize="16sp"
                    android:text="倍"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lottery_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/notice"
            android:layout_below="@id/timeview"
            android:background="@color/white"
            >
            <LinearLayout
                android:id="@+id/lottery_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <include
                    android:id="@+id/temp2"
                    layout="@layout/item_lottery_history" />
         <!--       <TextView
                    android:id="@+id/tagtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="点击开奖号码看更多"
                    />-->
            </LinearLayout>
            <com.lottery.biying.view.ScrollLayout
                android:id="@+id/historylist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <com.lottery.biying.view.ContentScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:id="@+id/contentview"
                    >
                   <!-- <include
                        android:id="@+id/contentmainview"
                        layout="@layout/view_floating_main_view"/>-->
                    <LinearLayout
                        android:id="@+id/contentmainview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray16"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dip"
                            android:layout_marginBottom="10dip"
                            >




                            <CheckBox
                                android:id="@+id/checkBox_yilou"
                                android:button="@null"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dip"
                                android:text="遗漏"
                                android:drawableRight="@drawable/yilou_selector"
                                android:drawablePadding="5dip"
                                android:textSize="14sp"
                                android:textColor="@color/black2"
                                />
                            <TextView
                                android:id="@+id/rule1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_toLeftOf="@id/checkBox_yilou"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >


                            <TextView
                                android:id="@+id/yaoyiyao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:gravity="center|left"
                                android:textSize="15sp"
                                android:text="摇一摇"
                                android:paddingLeft="15dip"
                                android:textColor="#666666"
                                android:background="@drawable/yao_pic"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="13dip"
                                android:layout_alignRight="@id/yaoyiyao"
                                android:layout_centerVertical="true"
                                android:src="@drawable/yao"
                                />

                            <TextView
                                android:id="@+id/playtips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:drawableLeft="@drawable/tips"
                                android:layout_alignParentRight="true"
                                android:text="玩法说明"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="20dip"
                                android:drawablePadding="5dip"
                                />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/weishu_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_below="@id/yaoyiyao"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            >

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:text="万"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:background="@drawable/btn_checkbox"
                                android:textColor="@color/btn_checkbox_color"
                                />
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:button="@null"
                                android:text="千"
                                android:textSize="14sp"
                                android:background="@drawable/btn_checkbox"
                                android:textColor="@color/btn_checkbox_color"
                                />
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:button="@null"
                                android:text="百"
                                android:textSize="14sp"
                                android:background="@drawable/btn_checkbox"
                                android:textColor="@color/btn_checkbox_color"
                                />
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:button="@null"
                                android:text="十"
                                android:textSize="14sp"
                                android:background="@drawable/btn_checkbox"
                                android:textColor="@color/btn_checkbox_color"
                                />
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:button="@null"
                                android:text="个"
                                android:textSize="14sp"
                                android:background="@drawable/btn_checkbox"
                                android:textColor="@color/btn_checkbox_color"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </com.lottery.biying.view.ContentScrollView>
            </com.lottery.biying.view.ScrollLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
