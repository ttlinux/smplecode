<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include
        layout="@layout/toplayout"/>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="center"
            android:background="@drawable/circle_loess4"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15sp"
            android:textColor="@color/gray19"
            android:text="旧昵称"
            />

        <TextView
            android:id="@+id/oldname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:layout_marginLeft="10dip"
            android:background="@color/white"
            android:textSize="14sp"
            android:padding="5dip"
            android:textColor="@color/black2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="center"
            android:background="@drawable/circle_loess4"
            />

        <TextView
            android:id="@+id/nicknametag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textSize="15sp"
            android:textColor="@color/gray19"
            android:text="新昵称"
            />

        <EditText
            android:id="@+id/newnickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:layout_marginLeft="10dip"
            android:background="@color/white"
            android:textSize="14sp"
            android:padding="5dip"
            android:textColor="@color/black2"
            android:hint="请输入昵称"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@color/line" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_margin="20dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="确认修改"
        android:background="@drawable/btn_conner_noradiu_loss"
        android:textSize="14sp"
        />
</LinearLayout>
