<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray18"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/searchlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dip"
                >
                <EditText
                    android:id="@+id/username_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_conner_radiu_gray"
                    android:hint="输入下级账号"
                    android:padding="10dip"
                    android:textSize="14sp"
                    android:textColor="@color/gray20"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dip"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    >

                <TextView
                    android:id="@+id/starttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_conner_radiu_gray"
                    android:hint=""
                    android:gravity="center"
                    android:padding="10dip"
                    android:textSize="14sp"
                    android:textColor="@color/gray20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:text="至"
                    android:textColor="@color/gray20"
                    />
                    <TextView
                        android:id="@+id/endtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/btn_conner_radiu_gray"
                        android:padding="10dip"
                        android:textSize="14sp"
                        android:textColor="@color/gray20"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/includes"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:paddingRight="10dip"
                    >

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/gou_black_normal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:textSize="14sp"
                        android:text="包含下级"
                        android:textColor="@color/gray20"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/image"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:background="@color/loess4"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:text="彩种"
                        android:textColor="@color/loess4"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:background="@color/loess4"
                        />

                </LinearLayout>
                <GridLayout
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </GridLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:background="@color/loess4"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:text="账变类型"
                        android:textColor="@color/loess4"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:background="@color/loess4"
                        />

                </LinearLayout>
                <GridLayout
                    android:id="@+id/gridview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </GridLayout>

                <TextView
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="20dip"
                    android:padding="10dip"
                    android:textSize="14sp"
                    android:text="@string/confirm"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_conner_noradiu_loss"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
    </RelativeLayout>
</RelativeLayout>
